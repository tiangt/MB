        <activity
            android:name=".ksyun.player.streamer.FloatViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/Theme.RiseAnimation" />
        <activity
