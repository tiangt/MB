                        </shape>
                    </item>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="#08000000" />
                            <corners android:radius="20dp" />
                            <padding android:bottom="5px" android:left="5px" android:right="5px" android:top="5px" />
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>