<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HeartLayout">
        <attr name="initX" format="dimension"/>
        <attr name="initY" format="dimension"/>
        <attr name="xRand" format="dimension"/>
        <attr name="animLengthRand" format="dimension"/>
        <attr name="xPointFactor" format="dimension"/>
        <attr name="animLength" format="dimension"/>
        <attr name="heart_width" format="dimension"/>
        <attr name="heart_height" format="dimension"/>
        <attr name="bezierFactor" format="integer"/>
        <attr name="anim_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ProgressTextView">
        <attr name="ptv_textColor" format="color"/>
        <attr name="ptv_thumHeight" format="dimension"/>
        <attr name="ptv_textSize" format="dimension"/>
        <attr name="ptv_thumWidth" format="dimension"/>
    </declare-styleable>

    <!--圆形头像-->
    <declare-styleable name="CircleHead">
        <attr name="circleBorderHeadWidth" format="dimension" />
        <attr name="ringHeadColor" format="color" />
        <attr name="backgroundHeadColor" format="color" />
    </declare-styleable>
</resources>

