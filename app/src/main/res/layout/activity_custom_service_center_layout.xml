<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/white_toolbar" />

    <include layout="@layout/divider_shawdow_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_shawdow_deep"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_12"
        android:paddingRight="@dimen/padding_12">


        <RelativeLayout
            android:id="@+id/user_custom_official_service_rela"
            android:layout_width="wrap_content"
            android:layout_height="49dp">

            <TextView
                android:id="@+id/user_custom_official_service_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/user_custom_fficial_service"
                android:textColor="#70000000"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/user_custom_official_service_qq_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_qq_custom" />
        </RelativeLayout>

        <View
            android:id="@+id/user_custom_fficial_service_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#10000000" />

        <RelativeLayout
            android:id="@+id/user_custom_guild_entered_rela"
            android:layout_width="wrap_content"
            android:layout_height="49dp">

            <TextView
                android:id="@+id/user_custom_guild_entered_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/user_custom_guild_entered"
                android:textColor="#70000000"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/user_custom_guild_entered_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_qq_custom" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>