<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y8"
    android:layout_marginLeft="@dimen/x4"
    android:layout_marginRight="@dimen/x11"
    android:layout_marginBottom="@dimen/y6"
    app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/home_rvitem_cover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/home_rvitem_status"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_alignRight="@id/home_rvitem_cover"/>

                <TextView
                    android:id="@+id/home_rvitem_anchorNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignBottom="@+id/home_rvitem_cover"
                    android:layout_alignLeft="@id/home_rvitem_cover"
                    android:textColor="@color/rv_item_nickname"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/home_rvitem_roomUserCount_iv"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="41dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignBottom="@+id/home_rvitem_cover"
                    android:layout_alignRight="@id/home_rvitem_cover"
                    android:background="@drawable/ic_home_watch_status"
                    android:textColor="@color/rv_item_nickname" />

                <TextView
                    android:id="@+id/home_rvitem_roomUserCount"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignBottom="@+id/home_rvitem_cover"
                    android:layout_alignRight="@+id/home_rvitem_cover"
                    android:textStyle="bold"
                    android:textColor="@color/rv_item_nickname" />
        </RelativeLayout>
</android.support.v7.widget.CardView>



