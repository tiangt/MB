<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/home_rvitem_cover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/home_rvitem_status"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:layout_alignRight="@id/home_rvitem_cover"/>

                <TextView
                    android:id="@+id/home_rvitem_anchorNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_alignBottom="@+id/home_rvitem_cover"
                    android:text="主播昵称"
                    android:textColor="@color/rv_item_nickname" />

                <ImageView
                    android:id="@+id/home_rvitem_roomUserCount_iv"
                    android:layout_width="18dp"
                    android:layout_height="23dp"
                    android:layout_alignBottom="@+id/home_rvitem_cover"
                    android:layout_toRightOf="@+id/home_rvitem_anchorNickname"
                    android:background="@mipmap/ic_home_watch_status"
                    android:textColor="@color/rv_item_nickname" />

                <TextView
                    android:id="@+id/home_rvitem_roomUserCount"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_alignBottom="@+id/home_rvitem_cover"
                    android:layout_toRightOf="@+id/home_rvitem_roomUserCount_iv"
                    android:text="1699"
                    android:textStyle="bold"
                    android:textColor="@color/rv_item_nickname" />
        </RelativeLayout>
</android.support.v7.widget.CardView>



