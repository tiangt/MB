<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="292dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_top_peak"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_1_peak"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="51.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.whzl.mengbi.ui.widget.view.CircleImageView
            android:id="@+id/iv_avatar_1_peak"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="11.5dp"
            app:civ_border_color="#fdde35"
            app:civ_border_width="1.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginRight="29dp"
            android:src="@drawable/ic_first_peak"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nick_1_peak"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textColor="#ff3a5a"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar_1_peak" />

        <ImageView
            android:id="@+id/iv_level_1_peak"
            android:layout_width="37dp"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nick_1_peak" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_2_peak"
        android:layout_width="112dp"
        android:layout_height="103dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="101dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.whzl.mengbi.ui.widget.view.CircleImageView
            android:id="@+id/iv_avatar_2_peak"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:civ_border_color="#ff8795"
            app:civ_border_width="1.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nick_2_peak"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textColor="#ff3a5a"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar_2_peak" />

        <ImageView
            android:id="@+id/iv_level_2_peak"
            android:layout_width="37dp"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nick_2_peak" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_3_peak"
        android:layout_width="112dp"
        android:layout_height="103dp"
        android:layout_marginTop="114dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.whzl.mengbi.ui.widget.view.CircleImageView
            android:id="@+id/iv_avatar_3_peak"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:civ_border_color="#ff8795"
            app:civ_border_width="1.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nick_3_peak"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textColor="#ff3a5a"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar_3_peak" />

        <ImageView
            android:id="@+id/iv_level_3_peak"
            android:layout_width="37dp"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nick_3_peak" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>