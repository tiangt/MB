<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45.5dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21.5dp"
        android:background="@drawable/shape_rank_text_bg"
        android:textSize="9sp"
        android:gravity="center"
        android:textColor="#e5e5e5"/>

    <ImageView
        android:id="@+id/iv_user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/tv_rank" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.5dp"
        android:layout_toRightOf="@id/iv_user_level"
        android:textColor="@drawable/selector_rank_list_anchor_nick_name_text_color"
        android:textSize="15sp"
        android:maxEms="7"
        android:singleLine="true"
        android:ellipsize="middle"/>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/tv_nick_name"
        android:src="@drawable/ic_home_live_middle"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25.5dp">

        <TextView
            android:id="@+id/tv_gap_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="距前一名差"
            android:textColor="#757575"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_gap_desc"
            android:textColor="#ff611c"
            android:textSize="12sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#e5e5e5" />


</RelativeLayout>
