<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_color_49"
    tools:context=".ui.activity.UserInfoSexActivity">

    <include
        android:id="@+id/user_info_sex_include"
        layout="@layout/activity_base_toolbar"/>
    <RelativeLayout
        android:id="@+id/user_info_sex_m_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y4"
        android:background="@color/font_color_51"
        android:layout_below="@id/user_info_sex_include">
        <Button
            android:id="@+id/user_info_sex_m"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y28"
            android:layout_marginLeft="@dimen/x16"
            android:gravity="center_vertical"
            android:text="@string/user_info_sex_m"
            android:textColor="@color/font_color_47"
            android:background="@null"/>
    </RelativeLayout>
    <View
        android:id="@+id/user_info_sex_m_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/font_color_49"
        android:layout_below="@id/user_info_sex_m_rela"/>
    <RelativeLayout
        android:id="@+id/user_info_sex_w_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_color_51"
        android:layout_below="@id/user_info_sex_m_bottom_view">
        <Button
            android:id="@+id/user_info_sex_w_but"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y28"
            android:layout_marginLeft="@dimen/x16"
            android:gravity="center_vertical"
            android:text="@string/user_info_sex_w"
            android:textColor="@color/font_color_47"
            android:background="@null"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/font_color_49"/>
</RelativeLayout>