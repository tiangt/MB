<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    tools:layout_editor_absoluteY="25dp">

    <com.whzl.mengbi.ui.widget.view.CircleRelativeLayout
        android:id="@+id/circle_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_online_head_civilian">

        <com.whzl.mengbi.ui.widget.view.CircleImageView
            android:id="@+id/iv_circle_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp" />

        <ImageView
            android:id="@+id/iv_pk_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </com.whzl.mengbi.ui.widget.view.CircleRelativeLayout>

    <TextView
        android:id="@+id/tv_pk_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:textSize="8sp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circle_head" />
</android.support.constraint.ConstraintLayout>
