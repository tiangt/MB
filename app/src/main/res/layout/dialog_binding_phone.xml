<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机"
            android:textSize="19sp"
            android:layout_centerInParent="true"
            android:textColor="@color/tran_black2"/>

        <TextView
            android:id="@+id/tv_jump"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="跳过"
            android:textSize="15sp"
            android:textColor="@color/tran_black5"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F5F5F5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_binding_phone"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/tran_black2"
        android:layout_marginTop="23dp"
        android:textSize="14sp"
        android:text="绑定手机可以提高账号安全，账号被盗时"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/tran_black2"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text="可以快速帮您找回！"/>

    <Button
        android:id="@+id/btn_binding"
        android:layout_width="166dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:background="@drawable/shape_yellow_btn"
        android:text="马上绑定"
        android:textSize="15sp"
        android:textColor="@color/black"/>

</LinearLayout>