<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_room_redpacket"
        android:layout_width="192.5dp"
        android:layout_height="248dp"
        android:background="@drawable/bg_room_redpacket"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:background="@drawable/shape_close_room_redpacket"
        android:padding="4.5dp"
        android:src="@drawable/ic_close_common"
        app:layout_constraintLeft_toRightOf="@id/ll_room_redpacket"
        app:layout_constraintRight_toRightOf="@id/ll_room_redpacket"
        app:layout_constraintTop_toTopOf="@id/ll_room_redpacket" />
</android.support.constraint.ConstraintLayout>