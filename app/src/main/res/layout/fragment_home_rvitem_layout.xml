<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_rvitem_cover"
        android:layout_width="177dp"
        android:layout_height="190dp"/>

    <ImageView
        android:id="@+id/home_rvitem_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/home_rvitem_cover"/>

    <TextView
        android:id="@+id/home_rvitem_anchorNickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主播昵称"
        android:layout_alignBottom="@id/home_rvitem_cover"/>

    <TextView
        android:id="@+id/home_rvitem_anchorNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/home_rvitem_cover"
        android:layout_toRightOf="@id/home_rvitem_anchorNickname_tv"
        android:text="qaz" />

    <ImageView
        android:id="@+id/home_rvitem_roomUserCount_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/home_rvitem_cover"
        android:layout_toRightOf="@id/home_rvitem_anchorNickname"
        android:layout_marginRight="0dp"
        android:text="主播人气" />

    <TextView
        android:id="@+id/home_rvitem_roomUserCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/home_rvitem_roomUserCount_iv"
        android:layout_alignBottom="@id/home_rvitem_cover"
        android:text="111"/>

</RelativeLayout>
