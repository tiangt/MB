<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="356dp"
        android:background="@drawable/bg_redpack"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_note_redpack"
            android:layout_width="26.5dp"
            android:layout_height="24.5dp"
            android:paddingLeft="11.5dp"
            android:paddingTop="9.5dp"
            android:src="@drawable/ic_note_common"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="34.5dp"
            android:src="@drawable/ic_title_redpack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_close_redpack"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_close_common"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_inner_redpack"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.whzl.mengbi.ui.widget.tablayout.TabLayout
                android:id="@+id/tab_redpack"
                style="@style/Tab_Redpack_Dialog"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:tabMinWidth="130dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_redpack"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>