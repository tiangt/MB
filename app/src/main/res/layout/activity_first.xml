<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000">

        <TextView
            android:id="@+id/tv_random_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:text="随便看看»"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_world_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_world_first"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23.5dp"
            android:src="@drawable/ic_logo_first"
            app:layout_constraintBottom_toTopOf="@id/iv_world_first"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageButton
                android:id="@+id/btn_qq_first"
                android:layout_width="45.5dp"
                android:layout_height="45.5dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_qq_first" />

            <ImageButton
                android:id="@+id/btn_wechat_first"
                android:layout_width="45.5dp"
                android:layout_height="45.5dp"
                android:layout_marginLeft="37.5dp"
                android:layout_toRightOf="@id/btn_qq_first"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_wechat_first" />

            <ImageButton
                android:id="@+id/btn_phone_first"
                android:layout_width="45.5dp"
                android:layout_height="45.5dp"
                android:layout_marginLeft="37.5dp"
                android:layout_toRightOf="@id/btn_wechat_first"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_phone_first" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即同意"
                android:textColor="#f9f9f9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_xieyi_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议和隐私政策》"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>