<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/bg_5_goodnum"
            android:paddingBottom="12dp"
            android:paddingLeft="31dp"
            android:paddingRight="31dp"
            android:paddingTop="12dp"
            android:textColor="#9003e1"
            android:textSize="19sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bg_color" />

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/comm_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.whzl.mengbi.ui.widget.view.AlignTextView
                android:layout_width="65dp"
                android:layout_height="14dp"
                android:layout_marginLeft="19dp"
                android:textColor="@color/text_view"
                android:textSize="15sp"
                app:text="赠送ID" />


            <EditText
                android:id="@+id/et_send_id"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bg_send_vip"
                android:gravity="center_vertical"
                android:imeOptions="actionSearch"
                android:inputType="number"
                android:maxLength="20"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/font_color_52"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_id_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_id_success"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_id_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="该用户不存在"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:visibility="gone" />
        </LinearLayout>

        <include layout="@layout/common_divider_1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.whzl.mengbi.ui.widget.view.AlignTextView
            android:id="@+id/atv_nick"
            android:layout_width="65dp"
            android:layout_height="14dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/text_view"
            android:textSize="15sp"
            app:text="昵称" />

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:paddingLeft="14dp"
            android:text=""
            android:textColor="@color/font_color_52"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/common_divider_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.whzl.mengbi.ui.widget.view.AlignTextView
            android:id="@+id/atv_time"
            android:layout_width="65dp"
            android:layout_height="14dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/text_view"
            android:textSize="15sp"
            app:text="时长" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:paddingLeft="14dp"
            android:text="30天"
            android:textColor="@color/font_color_52"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/common_divider_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.whzl.mengbi.ui.widget.view.AlignTextView
            android:layout_width="65dp"
            android:layout_height="14dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/text_view"
            android:textSize="15sp"
            app:text="价格" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@null"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/mengbi_me"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="@color/orange"
            android:textSize="15sp" />

    </LinearLayout>

    <include layout="@layout/common_divider_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/comm_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.whzl.mengbi.ui.widget.view.AlignTextView
            android:id="@+id/atv_recommend"
            android:layout_width="65dp"
            android:layout_height="14dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/text_view"
            android:textSize="15sp"
            app:text="推荐主播" />


        <EditText
            android:id="@+id/et_anchor"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:background="@drawable/bg_send_vip"
            android:gravity="center_vertical"
            android:hint="请输入主播房间号"
            android:imeOptions="actionSearch"
            android:inputType="number"
            android:maxLength="20"
            android:padding="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/font_color_52"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="（选填）"
            android:textColor="@color/text_hint"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/iv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_id_success"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="该主播不存在"
            android:textColor="@color/orange"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>

    <include layout="@layout/common_divider_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.whzl.mengbi.ui.widget.view.AlignTextView
            android:layout_width="65dp"
            android:layout_height="14dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/text_view"
            android:textSize="15sp"
            app:text="主播昵称" />

        <TextView
            android:id="@+id/tv_anchor_nick"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@null"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="@color/text_hint"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_buy_goodnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/shape_btn_theme"
        android:text="确定购买"
        android:textColor="@color/comm_white"
        android:textSize="18sp" />

</LinearLayout>