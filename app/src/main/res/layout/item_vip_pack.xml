<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_vip_shop" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#70000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_yellow_btn"
            android:gravity="center"
            android:text="续费"
            android:textColor="#70000000"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/bg_reward_vip_pack"
        android:gravity="center"
        android:text="每日奖励"
        android:textColor="@color/text_view"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="59.5dp"
            android:drawablePadding="11dp"
            android:drawableTop="@drawable/ic_yaoji_vip_pack"
            android:gravity="center"
            android:text="66个蓝色妖姬"
            android:textColor="#70000000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableTop="@drawable/ic_broad_vip_pack"
            android:gravity="center"
            android:text="1个广播卡"
            android:textColor="#70000000"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_receive"
        android:layout_width="130.5dp"
        android:layout_height="33dp"
        android:layout_marginTop="17.5dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>