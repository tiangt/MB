        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_home_live_middle"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
