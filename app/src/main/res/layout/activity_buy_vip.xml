<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/ic_vip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/comm_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="昵称："
            android:textColor="@color/text_view"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:paddingLeft="14dp"
            android:text=""
            android:textColor="@color/font_color_52"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/common_divider_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="时长："
            android:textColor="@color/text_view"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:paddingLeft="14dp"
            android:text="30天"
            android:textColor="@color/font_color_52"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/common_divider_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="价格："
            android:textColor="@color/text_view"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@null"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/mengbi_me"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="@color/orange"
            android:textSize="15sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_buy_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="143dp"
        android:background="@drawable/shape_btn_theme"
        android:text="购买"
        android:textColor="@color/comm_white"
        android:textSize="18sp" />


</LinearLayout>