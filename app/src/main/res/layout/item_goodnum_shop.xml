<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="84.5dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_num_item_goodnum"
            android:layout_width="21.5dp"
            android:layout_height="21.5dp"
            android:layout_marginRight="-1dp"
            android:src="@drawable/ic_pretty_a" />

        <TextView
            android:id="@+id/tv_num_item_goodnum"
            android:layout_width="match_parent"
            android:layout_height="21.5dp"
            android:background="@drawable/bg_pretty_num_a"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_price_item_goodnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:textColor="@color/text_view"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_buy_item_goodnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5.5dp"
        android:text="购买"
        android:textColor="#ff2d4e"
        android:textSize="12sp" />

</LinearLayout>