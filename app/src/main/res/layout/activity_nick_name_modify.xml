<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/white_toolbar" />

    <include layout="@layout/divider_shawdow_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_shawdow_deep">

        <EditText
            android:id="@+id/et_nick_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/user_info_nickname_hint"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="14dp"
            android:textColor="@color/font_color_52"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/et_nick_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:src="@drawable/close"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_limit_nick_name_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="6dp"
        android:textColor="#70000000"
        android:textSize="12sp" />
</LinearLayout>