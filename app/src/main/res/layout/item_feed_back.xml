<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_feed_back"
        android:layout_width="71dp"
        android:layout_height="77dp"
        android:layout_marginLeft="12dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/iv_del_item_feed_back"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="1.5dp"
        android:layout_marginTop="1.5dp"
        android:src="@drawable/ic_close_item_feed_back"
        app:layout_constraintRight_toRightOf="@id/iv_item_feed_back"
        app:layout_constraintTop_toTopOf="@id/iv_item_feed_back" />
</android.support.constraint.ConstraintLayout>