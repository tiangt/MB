<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.home.HomeFragment">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/fm_home_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.youth.banner.Banner
                android:id="@+id/home_banner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y78"
                app:title_textsize="@dimen/font_size_44px"/>

            <TextView
                android:id="@+id/fm_home_recommend_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_view"
                android:textSize="@dimen/font_size_44px"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/home_banner"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fm_home_recommend_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fm_home_recommend_tv"/>

            <TextView
                android:id="@+id/fm_home_show_live_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_view"
                android:textSize="@dimen/font_size_44px"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/fm_home_recommend_recycler_view"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fm_home_show_live_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fm_home_show_live_tv"/>
        </android.support.constraint.ConstraintLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</ScrollView>