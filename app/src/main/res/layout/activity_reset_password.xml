<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_black_toolbar" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_edit_text_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_login_lock" />

        <View
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_marginLeft="9dp"
            android:background="@color/colorCommNotActive" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:hint="@string/input_new_psw"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColorHint="#B9B9B9"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:background="@drawable/login_edit_text_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_login_lock" />

            <View
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:layout_marginLeft="9dp"
                android:background="@color/colorCommNotActive" />

            <EditText
                android:id="@+id/et_password_again"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:hint="@string/input_psw_again"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColorHint="#B9B9B9"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_psw_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码不能为纯数字，请重新输入"
            android:visibility="invisible"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#ff611b"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm_reset"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/selector_comm_btn_bg"
        android:enabled="false"
        android:text="@string/confirm_reset"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>