<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/comm_toolbar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/login_logo" />


        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_edit_text_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_login_phone" />

            <View
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:layout_marginLeft="9dp"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:hint="@string/phone_number_hint"
                android:inputType="phone"
                android:textColorHint="#B9B9B9"
                android:textSize="16sp"
                android:maxLength="11"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/login_edit_text_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_login_lock" />

            <View
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:layout_marginLeft="9dp"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:textColorHint="#B9B9B9"
                android:textSize="16sp"
                android:maxLength="12"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        
        
        <Button
            android:id="@+id/btn_login"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:enabled="false"
            android:background="@drawable/selector_login_btn_bg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="登 录"
            android:textColor="@color/white"
            android:textSize="18sp"/>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <ImageButton
            android:id="@+id/btn_wechat_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_login_weixin" />

        <ImageButton
            android:id="@+id/btn_qq_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67dp"
            android:layout_toRightOf="@id/btn_wechat_login"
            android:background="@null"
            android:src="@drawable/ic_login_qq" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_icon_container"
        android:layout_marginBottom="21dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/divider_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/appBg"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="15dp"
            android:textColor="#B9B9B9"
            android:text="其他方式登录" />

    </RelativeLayout>

</RelativeLayout>