<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gift_anim_view"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="30dp">


    <RelativeLayout
        android:id="@+id/rl_avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp">

        <ImageView
            android:id="@+id/iv_anim_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <com.whzl.mengbi.ui.widget.view.CircleImageView
            android:id="@+id/iv_anim_gift_avatar"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignTop="@id/iv_anim_bg" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rl_avatar_container"
        android:layout_marginLeft="44dp"
        android:minWidth="54dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_anim_gift_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f9f9f9"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_anim_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="#f9f9f9"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_anim_gift_icon"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignBottom="@id/rl_avatar_container"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ll_info_container" />

    <TextView
        android:id="@+id/tv_anim_gift_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_anim_gift_icon"
        android:textColor="#faf9f9"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_combo_time_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_anim_gift_count"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_anim_gift_icon"
        android:text="连击 "
        android:textColor="@color/player_red"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_combo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_combo_time_desc"
        android:layout_marginBottom="-5dp"
        android:layout_toRightOf="@id/tv_combo_time_desc"
        android:textColor="@color/player_red"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>

