<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gift_anim_view"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_marginStart="3dp">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/iv_anim_bg"
        android:layout_width="255dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:scaleType="fitXY" />


    <com.whzl.mengbi.ui.widget.view.CircleImageView
        android:id="@+id/iv_anim_gift_avatar"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="4dp" />


    <LinearLayout
        android:id="@+id/ll_info_container"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@id/iv_anim_gift_avatar"
        android:gravity="center_vertical"
        android:minWidth="54dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_anim_gift_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:maxWidth="60dp"
            android:minWidth="60dp"
            android:singleLine="true"
            android:textColor="#fefefe"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_anim_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fefefe"
            android:textSize="9sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_anim_gift_icon"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@id/ll_info_container"
        android:visibility="invisible" />

    <com.whzl.mengbi.ui.widget.view.GiftTextView
        android:id="@+id/tv_combo_time_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/iv_anim_gift_icon"
        android:text="连送"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_anim_gift_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_combo_time_desc"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@id/iv_anim_gift_icon"
        android:textColor="#f8da36"
        android:textSize="12sp"
        android:textStyle="bold" />

    <com.whzl.mengbi.ui.widget.view.GiftTextView
        android:id="@+id/tv_x_gift_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tv_combo_time_desc"
        android:gravity="bottom"
        android:text="× "
        android:textColor="#faf9f9"
        android:textSize="25sp"
        android:textStyle="italic" />

    <com.whzl.mengbi.ui.widget.view.GiftTextView
        android:id="@+id/tv_combo_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tv_x_gift_count"
        android:gravity="bottom"
        android:text="1"
        android:textColor="#faf9f9"
        android:textSize="30sp"
        android:textStyle="italic" />

</RelativeLayout>

