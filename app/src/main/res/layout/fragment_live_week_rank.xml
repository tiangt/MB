<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:gravity="bottom"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="99dp"
        android:layout_height="62dp"
        android:background="@drawable/bg_week_rank"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="15dp"
                android:layout_height="13dp" />

            <TextView
                android:id="@+id/tv_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#eb0f05"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_rank_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#505050"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="15dp"
                android:layout_height="13dp" />

            <TextView
                android:id="@+id/tv_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#eb0f05"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_rank_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#505050"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="15dp"
                android:layout_height="13dp" />

            <TextView
                android:id="@+id/tv_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#eb0f05"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_rank_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#505050"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>