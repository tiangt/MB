<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_arrow_guide"
        android:layout_width="36dp"
        android:layout_height="167dp"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="112dp"
        android:src="@drawable/ic_arrow_guide"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_finger_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:src="@drawable/ic_finger_guide"
        app:layout_constraintBottom_toBottomOf="@id/iv_arrow_guide"
        app:layout_constraintLeft_toLeftOf="@id/iv_arrow_guide"
        app:layout_constraintTop_toTopOf="@id/iv_arrow_guide" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/iv_arrow_guide"
        app:layout_constraintLeft_toRightOf="@id/iv_finger_guide"
        app:layout_constraintTop_toTopOf="@id/iv_arrow_guide">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真的要离开吗"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="试试上下滑动"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>